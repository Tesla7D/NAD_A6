<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= form_tag(users_path, :method => 'get', id: "search-form") do %>
    <p>
      <%= text_field_tag :search, params[:search], placeholder: "Search Recipes" %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>

<ul class="users">
  <%= render @users %>
</ul>